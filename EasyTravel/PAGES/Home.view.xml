<mvc:View
  controllerName="sap.ui.easytravel.home.Home"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:tnt="sap.tnt"
  xmlns:html="http://www.w3.org/1999/xhtml"
  height="100%">
  <tnt:ToolPage id="toolPage">
    <tnt:header>
      <tnt:ToolHeader>
        <Button id="sideNavigationToggleButton"
						icon="sap-icon://menu2"
						type="Transparent"
						press="onToggleMenu">
          <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" />
          </layoutData>
        </Button>
        <ToolbarSpacer />
        <Label text="Home">
          <layoutData>
            <OverflowToolbarLayoutData priority="High" />
          </layoutData>
        </Label>
        <tnt:ToolHeaderUtilitySeparator />
        <ToolbarSpacer>
          <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px" />
          </layoutData>
        </ToolbarSpacer>
        <ImageContent
          id="imgProfileMini"
		      src="../Images/ic_user.png"
		      description="Profile image"
		      press="onBtnProfileImg">
        </ImageContent>
      </tnt:ToolHeader>
    </tnt:header>
    <tnt:sideContent>
      <tnt:SideNavigation expanded="true"
								itemSelect="onItemSelect">
        <tnt:NavigationList items="{path: '/navigation'}">
          <tnt:NavigationListItem text="{title}"
											icon="{icon}"
											enabled="{enabled}"
											expanded="{expanded}"
											items="{items}"
											key="{key}">
            <tnt:NavigationListItem text="{title}"
												key="{key}"
												enabled="{enabled}">
            </tnt:NavigationListItem>
          </tnt:NavigationListItem>
        </tnt:NavigationList>
      </tnt:SideNavigation>
    </tnt:sideContent>
    <tnt:mainContents>
      <NavContainer id="pageContainer">
        <pages>
          <Page id="detailMain" class="myPage">
            <content>
              <Panel
                class="myPanel1">
                <Label
                  class="myTitleLabel"
                  width="100%"
                  textAlign="Left"
                  text="About Easy Travel."/>
                <Label
                  class="myProfileLabel"
                  width="100%"
                  textAlign="Left"
                  text="Easy Travel è un progetto avviato nel mese di Luglio 2016 da Giorgio Bertolotti."/>
                <Label
                  class="myProfileLabel"
                  width="100%"
                  textAlign="Left"
                  text="Nato come applicazione da sviluppare durante uno stage estivo è poi continuato a crescere fino a diventare anche
                  applicazione web per essere disponibile all'uso anche senza bisogno di installare l'applicazione."/>
                <Label
                  class="myProfileLabel"
                  width="100%"
                  textAlign="Left"
                  text="Easy Travel vuole rendere più semplice l'organizzazione dei trasporti tra amici e sconosciuti."/>
              </Panel>
              <Panel
                class="myPanel2">
                <Label
                  class="myTitleLabel"
                  width="100%"
                  textAlign="Left"
                  text="About Me."/>
                <Label
                  class="myProfileLabel"
                  width="100%"
                  textAlign="Left"
                  text="Giorgio Bertolotti, sviluppatore di Easy Travel è uno studente dell'ITIS G.Marconi di Dalmine nato nel 1998."/>
                <Label
                  class="myProfileLabel"
                  width="100%"
                  textAlign="Left"
                  text="Inizia a sviluppare Easy Travel durante uno stage nell'estate tra il quarto e quinto anno di scuola superiore per poi riprendere il progetto
                  durante l'ultimo anno e decidere di portarlo come progetto per la tesina di maturità."/>
              </Panel>
              <Panel
                class="myPanel3">
                <Label
                  class="myTitleLabel"
                  width="100%"
                  textAlign="Left"
                  text="About Android App."/>
                <GenericTile
                  id="tile1"
                  backgroundImage="Images/slide1.png"
                  frameType="TwoByOne" press="onTilePress">
                  <tileContent>
                    <TileContent footer="HomePage">
                      <content>
                        <NewsContent
                          contentText="La HomePage dell'applicazione mostra il profilo utente.">
                        </NewsContent>
                      </content>
                    </TileContent>
                  </tileContent>
                </GenericTile>
                <GenericTile
                  id="tile2"
                  backgroundImage="Images/slide2.png"
                  frameType="TwoByOne" press="onTilePress">
                  <tileContent>
                    <TileContent footer="Destinazione">
                      <content>
                        <NewsContent
                          contentText="L'applicazione consente la scelta della destinazione tramite Google Maps.">
                        </NewsContent>
                      </content>
                    </TileContent>
                  </tileContent>
                </GenericTile>
                <GenericTile
                  id="tile3"
                  backgroundImage="Images/slide3.png"
                  frameType="TwoByOne" press="onTilePress">
                  <tileContent>
                    <TileContent footer="Dare passaggi">
                      <content>
                        <NewsContent
                          contentText="Scelta delle azioni da eseguire su un utente che chiede un passaggio.">
                        </NewsContent>
                      </content>
                    </TileContent>
                  </tileContent>
                </GenericTile>
                <GenericTile
                  id="tile4"
                  backgroundImage="Images/slide4.png"
                  frameType="TwoByOne" press="onTilePress">
                  <tileContent>
                    <TileContent footer="Mappa">
                      <content>
                        <NewsContent
                          contentText="Mappa per la visualizzazione di tutti gli utenti attivi entro il proprio raggio.">
                        </NewsContent>
                      </content>
                    </TileContent>
                  </tileContent>
                </GenericTile>
              </Panel>
            </content>
          </Page>
          <Page id="detailProfile" class="myPage">
            <content>
              <Panel
                class="myPanelProfile">
                <html:div class="myFABEditImage btn btn-primary">
                    <html:img src="../Images/edit.png" alt="Edit" />
                    <html:input id="imagePicker" type="file" class="upload" onchange="sap.ui.controller('sap.ui.easytravel.home.Home').onEditImage()" />
                </html:div>
                <ImageContent
                  class="myProfileImage"
                  id="imgProfile"
                  src="../Images/ic_user.png"
                  description="Profile image">
                </ImageContent>
                <Label
                  class="myProfileLabel"
                  width="100%"
                  textAlign="Center"
                  id="lblNome"
                  text="NOME"/>
                <Label
                  class="myProfileLabel"
                  width="100%"
                  textAlign="Center"
                  id="lblCognome"
                  text="COGNOME"/>
                <Label
                  class="myProfileLabel"
                  width="100%"
                  textAlign="Center"
                  id="lblMobile"
                  text="NUMERO TELEFONO"/>
              </Panel>
            </content>
          </Page>
          <Page id="detailSettings" class="myPage">
            <content>
              <Panel
                class="myPanelSettings">
                <html:table width="100%" style="margin-top:15px;">
                  <html:tr>
                    <html:td style="width:30%">
                      <Label
                        class="myProfileLabel"
                        width="100%"
                        textAlign="Center"
                        text="Range:"/>
                    </html:td>
                    <html:td style="width:70%">
                      <Slider
                        id="rangePicker"
                        value="50" width="100%"
				                min="0" max="100"
				                showAdvancedTooltip="true"
				                showHandleTooltip="false" />
                    </html:td>
                  </html:tr>
                  <html:tr>
                    <html:td style="width:30%">
                      <Label
                        class="myProfileLabel"
                        width="100%"
                        textAlign="Center"
                        text="Password vecchia:"/>
                    </html:td>
                    <html:td style="width:70%">
                      <Input
                        id="txtOldPassword"
                        type="Text"
                        width="100%"
                        placeholder="Password vecchia"/>
                    </html:td>
                  </html:tr>
                  <html:tr>
                    <html:td style="width:30%">
                      <Label
                        class="myProfileLabel"
                        width="100%"
                        textAlign="Center"
                        text="Password nuova:"/>
                    </html:td>
                    <html:td style="width:30%">
                      <Input
                        id="txtNewPassword"
                        type="Text"
                        width="100%"
                        placeholder="Password nuova"/>
                    </html:td>
                  </html:tr>
                  <html:tr>
                    <html:td style="width:30%">
                      <Label
                        class="myProfileLabel"
                        width="100%"
                        textAlign="Center"
                        text="Conferma password:"/>
                    </html:td>
                    <html:td style="width:30%">
                      <Input
                        id="txtConfirmPassword"
                        type="Text"
                        width="100%"
                        placeholder="Conferma password"/>
                    </html:td>
                  </html:tr>
                </html:table>
                <Button
                  id="btnSaveSettings"
                  width="100%"
                  text="Salva"
                  press="onBtnSave"/>
                <l:VerticalLayout 
                  id="stripcontainer"
                  width="100%" />
              </Panel>
            </content>
          </Page>
        </pages>
      </NavContainer>
    </tnt:mainContents>
  </tnt:ToolPage>
</mvc:View>
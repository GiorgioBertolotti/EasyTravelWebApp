<mvc:View 
  controllerName="sap.ui.easytravel.login.Login" 
  xmlns="sap.m" 
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:h="http://www.w3.org/1999/xhtml"
  height="100%">
  <VBox 
    alignItems="Center"
    height="100%">
    <h:div
      id="imglogo"
      class="myLogo"></h:div>
    <Panel
      width="300px">
      <Input
        id="txtMobile"
        type="Tel"
        width="268px"
        placeholder="Numero di telefono"
        value=""/>
      <Input
        id="txtPassword"
        type="Password"
        width="268px"
        placeholder="Password"
        value=""/>
      <Button
        id="btnLogin"
        width="268px"
        text="Accedi"
        press="onBtnLogin"/>
    </Panel>
  </VBox>
</mvc:View>